html
  script(src="/js/libs/jquery.min.js")
  script(src="/js/libs/jquery.cookie.js")
  script(src="/js/cart.js")
  script(src="/js/homepage.js")
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
  script(src="/js/libs/modernizr.js")
  link(rel="stylesheet" href="/css/homepage.css")
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css')
  link(rel='stylesheet', href='/css/limo.css')
  link(href="//fonts.googleapis.com/css?family=RobotoDraft:300,400,500|Source+Code+Pro:400,500,700" rel="stylesheet")
body
#loginModal.modal.fade(aria-hidden='true', role='dialog', tabindex='-1')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(aria-hidden='true', data-dismiss='modal', type='button')
          i.fa.fa-times
        h2
          | Se connecter ou 
          a(href='register.html') S'enregistrer
        p.large Utiliser les réseaux sociaux
        .social-login
          a.facebook(href='#')
            i.fa.fa-facebook-square
          a.google(href='#')
            i.fa.fa-google-plus-square
          a.twitter(href='#')
            i.fa.fa-twitter-square
      .modal-body
        form.login-form
          .form-group.group
            label(for='log-email') Email
            input#log-email.form-control(type='email', required='', placeholder='Votre email', name='log-email')
            a.help-link(href='#') Email oublié ?
          .form-group.group
            label(for='log-password') Mot de passe
            input#log-password.form-control(type='text', required='', placeholder='Votre mot de passe', name='log-password')
            a.help-link(href='#') Mot de passe oublié ?
          .checkbox
            label
              input(type='checkbox', name='remember')
              | Se souvenir
          input.btn.btn-black(type='submit', value='Login')
header(data-stuck='600', data-offset-top='500')
  form.search-form.closed(autocomplete='off', role='form', method='get')
    .container
      .close-search
        i.icon-delete
      .form-group
        label.sr-only(for='search-hd') Rechercher
        input#search-hd.form-control(type='text', placeholder='Rechercher', name='search-hd')
        button(type='submit')
          i.icon-magnifier
  .menu-toggle
    i.fa.fa-list
  .container
    a.logo(href='index.html')
      img(alt='PACES STORE', src='/img/logo.png')
  nav.menu
    .container
      ul.main
        li.has-submenu
          a(href='index.html')
            span A
            | ccueil
            i.fa.fa-chevron-down
          ul.submenu
            li
              a(href='index.html') Home - Slideshow
        li.has-submenu
          a(href='shop-filters-left-3cols.html')
            span S
            | tore
            i.fa.fa-chevron-down
          ul.submenu
            li
              a(href='shopping-cart.html') Mon Panier
            li
              a(href='checkout.html') Checkout Page
            li
              a(href='wishlist.html') Liste de souhait
        li.hide-sm
          a(href='support.html')
            span S
            | upport
  .toolbar-container
    .container
      .toolbar.group
        a.login-btn.btn-outlined-invert(data-target='#loginModal', data-toggle='modal', href='#')
          i.icon-profile
          span
            b C
            | onnexion
        .cart-btn
          a.btn.btn-outlined-invert(href='shopping-cart.html')
            i.icon-shopping-cart-content
            span 3
            b 89 €
          .cart-dropdown
            span
            .body
              table
                tbody
                  tr
                    th Produit
                    th Quantité
                    th Prix
                  tr.item
                    td
                      .delete
                      a(href='#') Colle Anantomie
                    td
                      input(type='text', value='1')
                    td.price 89 €
            .footer.group
              .buttons
                a.btn.btn-outlined-invert(href='checkout.html')
                  i.icon-download
                  | Checkout
                a.btn.btn-outlined-invert(href='shopping-cart.html')
                  i.icon-shopping-cart-content
                  | To cart
              .total 89 €
        button.search-btn.btn-outlined-invert
          i.icon-magnifier